@model IEnumerable<ApplicationUser>

@{
    ViewData["Title"] = "UserManagement";
}

<h2>UserManagement</h2>

<p>
    <a asp-action="AddUser" class="btn btn-primary">Create User</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
           
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
           
            <td>
                <form method="post" asp-controller="Admin" asp-action="DeleteUser" asp-route-userid=@(item.Id)>
                    @Html.ActionLink("Edit", "EditUser", new { id = item.Id }, new { @class = "btn btn-sm btn-primary" })
                    <button type="submit" onclick="return confirm('Are you sure you want to delete this user?')" class="btn btn-sm btn-primary">Delete</button>
                </form>


            </td>
        </tr>
}
    </tbody>
</table>
