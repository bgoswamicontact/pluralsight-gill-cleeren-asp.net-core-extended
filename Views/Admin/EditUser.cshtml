@model BethenysPieShop.Auth.ApplicationUser
@{
    ViewData["Title"] = "Edit User";
}

    <form method="post" asp-action="EditUser" asp-controller="Admin">
        <h4>Youc an change the user details below!</h4>
        <div asp-validation-summary="All" class="text-danger"></div>

        <input type="hidden" name="Id" value="@(Model != null ? Model.Id : null)" />
        <div class="form-group">
            <label class="col-sm-2 control-label" for="form-group-input">User Name</label>
            <div class="col-sm-10">
                <input class="form-control" placeholder="Enter user name" asp-for="UserName" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label" for="form-group-input">Email</label>
            <div class="col-sm-10">
                <input class="form-control" placeholder="Enter email" asp-for="Email" />
                <span asp-validation-for="Email" class="text-danger"></span>

            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label" for="form-group-input">Birth Date</label>
            <div class="col-sm-10">
                <input class="form-control" placeholder="Enter email" asp-for="BirthDate" />
                <span asp-validation-for="BirthDate" class="text-danger"></span>

            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label" for="form-group-input">City</label>
            <div class="col-sm-10">
                <input class="form-control" placeholder="Enter email" asp-for="City" />
                <span asp-validation-for="City" class="text-danger"></span>

            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label" for="form-group-input">Country</label>
            <div class="col-sm-10">
                <input class="form-control" placeholder="Enter email" asp-for="Country" />
                <span asp-validation-for="Country" class="text-danger"></span>

            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" class="btn btn-primary" value="Save user" />
                <a asp-action="UserManagement" class="btn btn-primary">Cancel</a>
            </div>
        </div>
    </form>